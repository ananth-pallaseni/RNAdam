# Figure out where RNADAM is installed
RNADAM_REPO="$(cd `dirname $0`/..; pwd)"

CLASSPATH=$("$RNADAM_REPO"/bin/compute-RNAdam-classpath.sh)
RNADAM_JARS=$("$RNADAM_REPO"/bin/compute-RNAdam-jars.sh)

# Find the RNADAM CLI jar
num_versions=$(ls "$RNADAM_REPO"/RNAdam-cli/target/appassembler/repo/org/bdgenomics/RNAdam/RNAdam-cli | wc -l)
if [ "$num_versions" -eq "0" ]; then
  echo "Failed to find RNAdam-cli jar in $RNADAM_REPO/RNAdam-cli/target/appassembler/repo/org/bdgenomics/RNAdam/RNAdam-cli"
  echo "You need to build RNAdam before running this program."
  exit 1
fi
if [ "$num_versions" -gt "1" ]; then
  versions_list=$(ls "$RNADAM_REPO"/RNAdam-cli/target/appassembler/repo/org/bdgenomics/RNAdam/RNAdam-cli)
  echo "Found multiple RNAdam CLI versions in $RNADAM_REPO/RNAdam-cli/target/appassembler/repo/org/bdgenomics/RNAdam/RNAdam-cli:"
  echo "$versions_list"
  echo "Please remove all but one."
  exit 1
fi
RNADAM_CLI_JAR=$(ls "$RNADAM_REPO"/RNAdam-cli/target/appassembler/repo/org/bdgenomics/RNAdam/RNAdam-cli/*/RNAdam-cli-*.jar)

if [ -z "$SPARK_HOME" ]; then
  echo "Attempting to use 'spark-submit' on default path; you might need to set SPARK_HOME"
  SPARK_SUBMIT=spark-submit
else
  SPARK_SUBMIT="$SPARK_HOME"/bin/spark-submit
fi

# submit the job to Spark
"$SPARK_SUBMIT" \
  --class org.bdgenomics.RNAdam.cli.RNAdamMain \
  --conf spark.serializer=org.apache.spark.serializer.KryoSerializer \
  --conf spark.kryo.registrator=org.bdgenomics.adam.serialization.ADAMKryoRegistrator \
  --conf spark.kryoserializer.buffer.mb=4 \
  --conf spark.kryo.referenceTracking=true \
  --conf spark.executor.memory=${RNADAM_EXECUTOR_MEMORY:-4g} \
  ${RNADAM_OPTS:- } \
  --driver-memory ${RNADAM_DRIVER_MEMORY:-4g} \
  --jars "$RNADAM_JARS" \
  "$RNADAM_CLI_JAR" \
  "$@"
